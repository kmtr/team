{
  "extends": [
    "airbnb"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.0"
    },
    "import/resolver": "webpack",
  },
  "rules": {
    "react/prefer-stateless-function": [2, {"ignorePureComponents": true}]
  }
}
